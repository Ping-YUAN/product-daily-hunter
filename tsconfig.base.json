{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@product-daily-hunter/product-hunter-board": [
        "libs/product-hunter-board/src/index.ts"
      ],
      "@product-daily-hunter/product-hunter-common": [
        "libs/product-hunter-common/src/index.ts"
      ],
      "@product-daily-hunter/product-hunter-date-picker": [
        "libs/product-hunter-date-picker/src/index.ts"
      ],
      "@product-daily-hunter/product-hunter-nav": [
        "libs/product-hunter-nav/src/index.ts"
      ],
      "@product-daily-hunter/product-hunter-no-data": [
        "libs/product-hunter-no-data/src/index.ts"
      ],
      "@product-daily-hunter/product-hunter-services": [
        "libs/product-hunter-services/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
